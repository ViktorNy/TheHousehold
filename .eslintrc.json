{
    "env": {
        "es2021": true,
        "node": true
    },
    "extends": [
        "plugin:react/recommended",
        "standard"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": 13,
        "sourceType": "module"
    },
    "plugins": [
        "react",
        "@typescript-eslint"
    ],
    "rules": {
        "semi": ["error", "always"],
        "space-before-function-paren": "off",
        "indent": ["error", 4],
        "no-use-before-define": "off",
        "@typescript-eslint/no-use-before-define": "off",
        "eol-last": "off",
        "no-mixed-operators": "off"
    }
}
